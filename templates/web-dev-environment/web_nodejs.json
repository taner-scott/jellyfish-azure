{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateBaseUrl": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "dbIpAddress": {
      "type": "string"
    },
    "serverSettings": {
      "type": "object"
    },
    "subnetSettings": {
      "type": "object"
    },
    "storageSettings": {
      "type": "object"
    }
  },
  "variables": {
    "vmSize": "Basic_A0",
    "imageReference": {
      "publisher": "Canonical",
      "offer": "UbuntuServer",
      "sku": "14.04.2-LTS",
      "version": "latest"
    },
    "scripts": [
      "[concat(parameters('templateBaseUrl'), 'shared/add_host_entry.sh')]",
      "[concat(parameters('templateBaseUrl'), 'web_nodejs/install_nodejs.sh')]"
    ],
    "scriptCommand": "[concat('bash install_nodejs.sh dbserver ', parameters('dbIpAddress'))]"
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('serverSettings').name]",
      "location": "[resourceGroup().location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('vmSize')]"
        },
        "osProfile": {
          "computername": "[parameters('serverSettings').machineName]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": "[variables('imageReference')]",
          "osDisk": {
            "name": "osdisk",
            "vhd": {
              "uri":
              "[concat('http://',parameters('storageSettings').name,'.blob.core.windows.net/vhds/',parameters('serverSettings').name,'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('serverSettings').nic.name)]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('serverSettings').name, '/install_nodejs')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('serverSettings').name)]"
      ],
      "properties": {
        "publisher": "Microsoft.OSTCExtensions",
        "type": "CustomScriptForLinux",
        "typeHandlerVersion": "1.2",
        "settings": {
          "fileUris": "[variables('scripts')]",
          "commandToExecute": "[variables('scriptCommand')]"
        }
      }
    }
  ]
}
